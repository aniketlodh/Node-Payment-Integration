<%- include("partials/header"); -%>
<form action="/pay" method="POST" id="donateForm">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Name">    
    </div>
    <div class="form-group">      
      <label for="email">Email address</label>
      <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Email Address">
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
      <label for="phoneNumber">Phone</label>
      <input type="number" class="form-control" id="phoneNumber" name="phoneNumber" placeholder="Phone Number">
    </div>
    <div class="form-group">
      <label for="amount">Amount</label>
      <input type="number" class="form-control" id="amount" name="amount" placeholder="Rs 0">
    </div>
    <button type="submit" class="btn btn-primary">Donate</button>
  </form>
<%- include("partials/footer"); -%>